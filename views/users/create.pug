extends ../layouts/common.pug

block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(name="name", type="text", value = values ? values.name : "")
        .form-group
            label(for="email") Email
            input#email.form-control(type="text" name="email" value = values ? values.name: "")
        .form-group
            label Phone
            input#phone.form-control(name="phone", type="text", value = values ? values.phone : "")
        .form-group
            label Password
            input#password.form-control(name="password", type="text", value = values ? values.password : "")

        button.btn.btn-primary(type="submit") Create